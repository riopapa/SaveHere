<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LandActivity"
        tools:layout="@layout/activity_land">
    </fragment>

    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:contentDescription="@string/app_name" />

    <com.urrecliner.savehere.CustomTextOutLineView
        xmlns:textoutline="http://schemas.android.com/apk/res-auto"
        android:id="@+id/datetimeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/txtDateTime"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.urrecliner.savehere.CustomTextOutLineView
        android:id="@+id/addressText1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/mapImage"
        android:text="@string/txtAddress"
        android:layout_marginBottom="27dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.urrecliner.savehere.CustomTextOutLineView
        android:id="@+id/placeText1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_above="@id/addressText1"
        android:layout_centerHorizontal="true"
        android:text="@string/txtPlace"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.urrecliner.savehere.CustomTextOutLineView
        android:id="@+id/GPSText1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/txtPlace"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo"
        android:padding="0dp"
        android:alpha="0.7"
        android:src="@raw/signature_blue_min" />

</RelativeLayout>
